@page "{id:int}"
@model TodoApi.Pages.OrderDetails.OrderDetail
@{
    ViewData["Title"] = "Resumo do Pedido";
}

<div>
    <div class="p10 bg-slate-100">
        <div>
            <a href="/Orders">
                        <button
                            class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-2 px-4 rounded inline-flex items-center">
                            <span>Adicionar Pedido</span>
                        </button>
            </a>

@if(Model.table.Status){    

    <section class="antialiased bg-gray-100 text-gray-600 p-4">
        <div class="flex flex-col justify-center h-full">
            <div class="w-full  mx-auto bg-white shadow-lg rounded-xl border border-gray-200">
                <header class="px-5 py-4 border-b border-gray-100 flex justify-between">
                    <h2 class="font-semibold text-gray-800">Pedidos</h2>
                </header>
                <div class="p-3">
                    <div class="overflow-x-auto">
                        <table class="table-auto w-full">
                            <thead class="text-xs font-semibold uppercase text-gray-400 bg-gray-50">
                                <tr>
                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-left">Id</div>
                                    </th>


                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-left">Qtd.</div>
                                    </th>
                                    
                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-left">Produto</div>
                                    </th>
                            
                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-center">Pre√ßo</div>
                                    </th>
                                </tr>
                            </thead>
                                <tbody class="text-sm divide-y divide-gray-100">
                                    @foreach (var item in Model.serviceLines)
                                    {
                                        <tr>
                                            <td class="p-2 whitespace-nowrap">
                                                <div class="text-left">#@item.Id</div>
                                            </td>
                            
                                            <td class="p-2 whitespace-nowrap">
                                                <div class="text-left">@item.Quantity</div>
                                            </td>
                                            <td class="p-2 whitespace-nowrap">
                                                <div class="text-left">@item.Product.Name</div>
                                            </td>
                            
                                            <td class="p-2 whitespace-nowrap ">
                                                <div class="text-center">@item.Product.Price</div>
                                            </td>
                                        </tr>
                                    }

                                    <tr>
                                            <td class="p-2 whitespace-nowrap">
                                                <div class="text-left">Total</div>
                                            </td>
                                        
                                            <td class="p-2 whitespace-nowrap">
                                                <div class="text-left"> @Model.total </div>
                                            </td>
                                    </tr>
                                    
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section> 

                <div style="display: flex; justify-content: space-between">
                    
                    <p></p>
                </div>

                

             <a href="/CloseService/@Model.table.Id">
                        <button
                            class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-2 px-4 rounded inline-flex items-center">
                            <span>Fechar Pedido</span>
                        </button>
            </a>
            } 
            else{
                <p>Sem pedidos cadastrados</p>
            } 
           
           
                 

        </div>
    </div>
</div>
